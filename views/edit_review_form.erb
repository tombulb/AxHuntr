
<% if logged_in? %>
  logged in as <%= current_user()['email']%>
  <form action="/session" method="post">
    <input type="hidden" name ="_method" value="delete">
    <button>logout</button>
  </form>
<% else %>

  <form action="/login">
    <button>log in</button>
  </form>

  <form action="/new_user">
    <button>sign up</button>
  </form>

<%end%>



<form action="/reviews/<%=review["id"]%>" method="post">
  <input type="hidden" name="_method" value="put">
  <div class="edit-review-form">

    <label for="">Model</label>
    <input type="text" name="model" value="<%= review["model"] %>">

    <label for="rating">Rating</label>
    <select name="rating" id="rating">
      <option value="<%=review["rating"]%>" selected><%=review["rating"]%></option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    
    <label for="">Post your review</label>
    <textarea id="review" name="review" rows="8" cols="50"></textarea>

    <button>update</button>

  </div>
</form>